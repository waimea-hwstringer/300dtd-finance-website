{#=====================================================
  User Login page
  - Form for logging in
=====================================================#}

{% extends 'pages/base.jinja' %}


{% block title %}

    Login - Dollar Scholar

{% endblock %}


{% block content %}

    <article>

        <header>
            <h2>Login...</h2>
            <span>Or, if you don't have an account, <a href="/register">register</a></span>
        </header>

        <form action="/login-user" method="POST">

            <input
                type="text"
                name="username"
                placeholder="Username"
                required
            >

            <input
                type="password"
                name="password"
                placeholder="Password"
                required
            >

            <button>Submit</button>

        </form>

    </article>

{% endblock %}

