{#=====================================================
  Singular post page
  - Shows details of one post
=====================================================#}

{% extends 'pages/base.jinja' %}


{% block title %}

    {{post.title}} - Dollar Scholar

{% endblock %}


{% block content %}

    <article id="post">

        <header>
            <h1>{{post.title}}</h1>
            <h4>by <a href="/user/{{ post.author }}">ðŸ‘¤{{ post.username }}</a></h4>
            <p>{{ post.date | localtimestamp }}</p>
        </header>

        <p>{{ post.content }}</p>

        {% if post.video_id %}
            <iframe 
                width="560" height="315" 
                src="https://www.youtube.com/embed/{{ post.video_id }}" 
                title="YouTube video player" 
                frameborder="0" 
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" 
                referrerpolicy="strict-origin-when-cross-origin" 
                allowfullscreen>
            </iframe>
        {% endif %}

        <img src="/image/{{ post.p_id }}" alt="{{ post.name }}">

        <footer>

            {# Only show delete link if logged in AND owner #}
            {% if session.user_id and (post.author == session.user_id) or session.is_admin == true %}

                <a href="/delete-post/{{ post.p_id }}" onclick="return confirm('Really delete?');">
                    Delete Post 
                    <svg class="bin" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                        <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                    </svg>
                </a>

            {% endif %}
            

        </footer>

    </article>

    <article id="comments">

        {% if session.tier > 2 or session.is_admin %}

            <form action="/add-comment/{{ post.p_id }}" method="POST">

                <input
                    type="text"
                    name="content"
                    placeholder="Make a comment..."
                    required
                >
                <button>Post Comment</button>
            </form>

        {% else %}

            <p>Apply for a higher tier to post comments.</p>
        
        {% endif %}

    </article>

    <article id="comments">
        
        {% if session.tier > 1 or session.is_admin %}
            
            {% for comment in comments %}

                <li id="comments">
                    <span><a href="/user/{{comment.c_author}}">ðŸ‘¤ {{ comment.c_username }}</a> - {{ comment.c_date | localtimestamp }}</span>
                    <p>
                        {{ comment.c_content }}

                        {% if session.user_id and (comment.c_author == session.user_id) or session.is_admin %}

                            <a href="/delete-comment/{{ post.p_id }}/{{ comment.c_id }}">
                            
                                <svg class="bin" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                                </svg>

                            </a>

                        {% endif %}
                    </p>
                </li>

            {% else %}

                <p>No comments!</p>

            {% endfor %}

        {% else %}

            <p>Apply for a higher tier to view comments!</p>

        {% endif %}
    
    </article>

{% endblock %}

