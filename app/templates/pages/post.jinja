{#=====================================================
  Singular post page
  - Shows details of one post
=====================================================#}

{% extends 'pages/base.jinja' %}


{% block title %}

    {{post.title}}

{% endblock %}


{% block content %}

    <article>

        <header>
            <h1>{{post.title}}</h1>
            <h4>by <a href="/user/{{ post.author }}">ðŸ‘¤{{ post.username }}</a> - {{ post.date }}</h4>
        </header>

        <p>{{ post.content }}</p>

        {% if post.video_id %}
            <iframe 
                width="560" height="315" 
                src="https://www.youtube.com/embed/{{ post.video_id }}" 
                title="YouTube video player" 
                frameborder="0" 
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" 
                referrerpolicy="strict-origin-when-cross-origin" 
                allowfullscreen>
            </iframe>
        {% endif %}

        <footer>

            {# Only show delete link if logged in AND owner #}
            {% if session.user_id and (post.author == session.user_id) %}

                <a href="/delete-post/{{ post.p_id }}" onclick="return confirm('Really delete?');">Delete</a>

            {% endif %}
            

        </footer>

        <br>

        <form action="/add-comment/{{ post.p_id }}" method="POST">

            <input
                type="text"
                name="content"
                placeholder="Make a comment..."
                required
            >
        
            <button>Post Comment</button>
        </form>

    </article>

    <article>
        {% for comment in comments %}

            <li id="comments">
                <span>ðŸ‘¤ {{ comment.c_username }} - {{ comment.c_date }}</span>
                <p>
                    {{ comment.c_content }}

                    {% if session.user_id and (comment.c_author == session.user_id)%}
                        <a href="/delete-comment/{{ post.p_id }}/{{ comment.c_id }}">ðŸ—‘</a></p> 
                    {% endif %}
            </li>

        {% else %}

            <p>No comments!</p>

        {% endfor %}
    
    </article>

{% endblock %}

