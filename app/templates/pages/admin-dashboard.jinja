    </article>

    <article>

        <h1>Verified Accounts</h1>

        {% for user in users if user.verified == 1 %}

            <details>
                
                <summary>{{user.username}} {% include "components/tier-icon.jinja" %}</summary>

                <p>First name: {{user.name}}</p>

                <p>Email: {{user.email}}</p>
                
                <a href="/user/{{user.id}}">View Profile</a>

                <a href="/admin-delete-user/{{user.id}}" onclick="return confirm('Are you sure you want to delete user {{user.id}}?');" >Delete Account</a>

                <a href="/admin-unverify-user/{{user.id}}">Unverify User</a>

